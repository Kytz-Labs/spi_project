<script client:visible>

	window.onscroll = () => {
		
		// nav menu functionality
		var nav = document.querySelector("nav");
		if(window.scrollY > 600){
				nav.style.width="100%";
				nav.style.left=0;
				nav.style.position="fixed";
				nav.style.zIndex="21";
				nav.style.left=0;
		}else{
			nav.style.width="100%";
				nav.style.left=0;
				nav.style.position="relative";
				nav.style.zIndex="21";
				nav.style.left=0;
		}
		if(window.scrollY < 500){
			if(window.innerWidth > 600) {
					nav.style.width="100%";
					nav.style.position="relative !important";
					nav.style.zIndex="100";
			}else {
					nav.style.width="100%";
					nav.style.position="relative !important";
					nav.style.zIndex="100"; 
			}
		}
	}

	var arrow = document.querySelector(".arrow_nav");
	var downarrow = document.querySelector(".mobilearrow");
	var arrow_product = document.querySelector(".arrow_product");
	var prodduct_arrow = document.querySelector(".prouctarrow");
	var arrow_about = document.querySelector(".arrow_about");
	var newarrow = document.querySelector(".aboutarrow");
	
	arrow.onclick=() => {
		downarrow.classList.toggle("activeClass");
	}

	arrow_product.onclick = () => {
		prodduct_arrow.classList.toggle("activeProduct");
	}

	arrow_about.onclick = () => {
		console.log(newarrow);
		newarrow.classList.toggle("activeAbout");
	}
</script>

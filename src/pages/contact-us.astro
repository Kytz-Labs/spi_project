</Header>
<script>
    var com_form = document.querySelector(".enquire_thnkmss"),
    sidebox_D = document.querySelector(".sidebox_D"),
    kytz_label = document.querySelector(".kytz-label"),
    w3form = document.getElementById("w3form");
	// (brand_btn = document.querySelectorAll(".brand-button")), (form_close = document.querySelector(".kytz_form_close")), (myform = document.querySelector("#enquire_main_form"));
	var emailerr = document.querySelector("#email_err"),
    usererror = document.querySelector("#username_err"),
    mobilerror = document.querySelector("#mobile_err"),
    messageerror = document.querySelector("#message_err");

	function enquire_form() {
		var e = document.getElementById("Kname"),
			r = document.getElementById("Kemail"),
			t = document.getElementById("Kmessage"),
			l = document.getElementById("submitbtn"),
			i = document.getElementById("message");
		function o() {
			var r = document.querySelector("#username_err"),
				n = e.value,
				t = /^[a-zA-Z\s]+$/.test(n);
			return e.value ? (e.value.length < 4 ? ((r.innerHTML = "username length is too short"), !1) : t ? ((r.innerHTML = ""), !0) : ((r.innerHTML = "username should be a-z ,A-Z only"), !1)) : ((r.innerHTML = "field required"), !1);
		}
		function s() {
			var e = document.querySelector("#email_err"),
				n = r.value,
				t = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/.test(n);
			return "" == n ? ((e.innerHTML = "required field"), !1) : t ? ((e.innerHTML = ""), !0) : ((e.innerHTML = "invalid email"), !1);
		}
		function m() {
			var e = document.querySelector("#message_err");
			return t.value ? ((e.innerHTML = ""), !0) : ((e.innerHTML = "field required"), !1);
		}

		e.addEventListener("input", () => {
			o();
		}),
			r.addEventListener("input", () => {
				s();
			}),
			t.addEventListener("input", () => {
				m();
			}),

			(l.onclick = (e) => {
				console.log("clicked");
				if ((e.preventDefault(), o() || s() || m())) {
					if (o() && s() && m()) {
						i.innerHTML = "";
						let r = document.querySelector(".enquire_contact_form"),
							n = document.getElementById("enquire_form"),
							t = document.getElementById("w3form"),
							u = document.querySelector(".enquire_thnkmss");
						l.innerHTML = "<div class='animate-pulse'>processing...</div>";
						let d = new FormData(t),
							c = {};
						d.forEach((e, r) => {
							c[r] ? (Array.isArray(c[r]) ? c[r].push(e) : (c[r] = [c[r], e])) : (c[r] = e);
						});
						let y = JSON.stringify(c);
						console.log(y),
							fetch("https://api.web3forms.com/submit", { method: "POST", headers: { "Content-Type": "application/json", Accept: "application/json" }, body: y })
								.then(async (e) => {
									let n = await e.json();
									200 == e.status ? ((l.innerHTML = "submit"), (u.style.display = "flex")) : (console.log(e), (l.innerHTML = n.message));
								})
								.catch((e) => {
									console.log(e), (l.innerHTML = "Something went wrong!");
								})
								.then(function () {
									t.reset(),
										setTimeout(() => {
											(u.style.display = "none"), (r.style.display = "block");
										}, 5e3);
								});
					} else i.innerHTML = '<div class="alert alert-warning">Please fill all required field</div>';
				} else i.innerHTML = '<div class="alert alert-warning">Please fill all required field</div>';
			});
	}

	document.addEventListener("DOMContentLoaded", function () {
		w3form.reset(), "scrollRestoration" in history && (history.scrollRestoration = "manual");
	}),
    // brand_btn.forEach((e, r) => {
    //     e.onclick = () => {
    //         (com_form.style.display = "flex"), (usererror.innerHTML = ""), (emailerr.innerHTML = ""), (mobilerror.innerHTML = ""), (messageerror.innerHTML = "");
    //     };
    // }),
    // (form_close.onclick = () => {
    //     (com_form.style.display = "none"), w3form.reset(), (usererror.innerHTML = ""), (emailerr.innerHTML = ""), (mobilerror.innerHTML = ""), (messageerror.innerHTML = "");
    // }),
    (window.onclick = (e) => {
        e.target === com_form && ((com_form.style.display = "none"), w3form.reset()), e.target === sidebox_D && (sidebox_D.style.display = "none"), e.target === kytz_label && (sidebox_D.style.display = "flex");
    }),
    enquire_form();
</script>


---
import Header from "@layouts/Layout.astro";
import Nav from "@components/Nav.astro";
import Cbtn from "@components/button/Cbtn.astro"
import Footer from "@components/Footer.astro"
const currentUrl=Astro.request.url;

const services_list= [
    { title: "SPI Capabilities", link: "pdfs/Software-Professionals-Inc.-Overview-of-Capabilities.pdf", description : "Our powerful combination of consulting and product expertise provides clients with end to end technology", },
    { title: "Services Offerings", link: "pdfs/SPI-Services-Offer.pdf", description : "Over the last few decades, advancements in computer and software technologies have reached an impressive level" },
    { title: "SPI Airport Capabilities", link: "pdfs/SPI-Airport-Capabilities.pdf", description : "Today’s airports manage their operations in a technology-driven environment to bring innovative solutions that advance the Customer Experience." },
    { title: "SPI Transportation Industry Capabilities", link: "/pdfs/SPI-Transportation-CS.pdf", description : "The transportation sector consists of several industries including air freight and logistics, airlines, marine, road, rail, and transportation infrastructure." },
	{ title: "SafeConnect", link: "/pdfs/SafeConnect.pdf", description : "Software Professionals, Inc. has developed a software tool for that is designed to incorporate an organization’s sustainable safety program " },
    { title: "EnviroConnect", link: "/pdfs/EnviroConnect.pdf", description : "EnviroConnect is a comprehensive solution for handling environmental data and generating reports." },
    { title: "ELMS", link: "", description : "LMS e-Connect is a platform that powers eLearning and is used to deliver training courses and educational programs to meet your company’s specific training needs." },
    { title: "PermitConnect", link: "/pdfs/PermitConnect.pdf", description : "PermitConnect is a comprehensive solution for handling environmental data and generating reports. With our innovative software, you can manage data, historical documents, maps, photos, and more." },
    { title: "SafeSchool", link: "/pdfs/SafeSchool-One-Pager.pdf", description : "SafeSchool is a comprehensive solution for handling environmental data and generating reports. With our innovative software, you can manage data, historical documents, maps, photos, and more." },
]
---

<Header title="Explore SPI's IT Solutions with Our Brochures" description="Download SPI’s brochures to learn about our IT services, including digital transformation, analytics, and IT staffing solutions." canonical={ currentUrl }>
	<style>
        .home_title,.service_shrt{font-family:Instrument Sans;text-underline-position:from-font;text-decoration-skip-ink:none}.service_shrt{font-size:14px;font-weight:500;line-height:22.4px;letter-spacing:.1em;text-align:center;color:#fffFFFCC}.home_title,.services{letter-spacing:-.03em}.site-title-layer::before{content:"";background-image:url("/svg/banner_bg.svg");height:435px;width:100%;position:absolute;inset:0;z-index:0;top:-33%;background-repeat:no-repeat;background-position:center}.home_title{font-size:48px;font-weight:600;line-height:57.6px;color:#fff}.contract,.home_description{font-size:18px;font-weight:500;font-family:Instrument Sans;text-align:left}.site-title-layer{background-size:cover;background-color:#000}.home_description{line-height:28.8px;color:#fffFFFCC}.contract{line-height:20px;color:#000000CC}.services{font-family:Instrument Sans;font-size:40px;font-weight:600;line-height:48px;text-align:left;color:#000}.check,.product-title{font-family:Instrument Sans;color:#fff}.services-title{font-family:Instrument Sans;font-size:24px;font-weight:500;line-height:38.4px;text-align:left}.modules>li,.services-description{font-family:Instrument Sans;font-size:15px;font-weight:500;line-height:24px;text-align:left}.product-title{font-size:24px;font-weight:700;line-height:28.8px;letter-spacing:.1em;text-align:left}.product_section{height:680px;background-image:url("/products.webp");background-size:cover}.check{font-size:16px;font-weight:600;line-height:19.52px;text-align:left}.browchurs_title,.product_description{font-family:Instrument Sans;font-weight:500;text-align:left;text-underline-position:from-font;text-decoration-skip-ink:none}.product_description{font-size:15px;line-height:24px;color:#000000CC}.browchurs_title{font-size:24px;line-height:38.4px;color:#000}@media (max-width:600px){.post{width:100%}.post_title{font-size:24px}.blogs-title{font-size:32px}.blogMain{background-color:#292d6b;color:#fff}.site-title-layer::before{height:435px}.home_title{font-size:40px;line-height:50.8px}}
	</style>
	<header class="">
		<Nav />
		<div class="px-8 lg:px-12 pt-20 lg:pb-0 pb-20 site-title-layer overflow-hidden relative flex items-start" >
			<div class="header flex flex-col items-center justify-center lg:pb-16 w-full">
				<h1 class="home_title text-center w-full block mb-5">
					Brochures
				</h1>
                <h6 class="text-white lg:w-[80%] text-center">
                    Explore our range of brochures to learn how Software Professionals, Inc. delivers value-driven digital solutions. From modernization to transformation, see how we empower businesses for growth.
                </h6>
			</div>
		</div>
		<section>

            <!-- we are a service -->
			<div class="lg:px-12 px-8 lg:pb-28 bg-[#000000] lg:pb-0 pb-12">
				<div class="inner-layer-innovator grid lg:grid-cols-3 gap-5">
                    {
                        services_list.map((data, dataIndex) => (
                            <div class="pl-2">
                               <div class="bg-white">
                                    <div class="px-6 py-12 flex flex-col justify-between min-h-[360px]">
										<div class="">
											<div class="browchurs_title mb-5">{data.title}</div>
											<div class="product_description lg:text-[#00000099] text-center my-4">
												{ data.description }
											</div>
										</div>
										<div>
											<a href={ data.link } target="_blank"><Cbtn colorbtnText="Download brochure" classname="" bgcolor="#006B9E" textColor="white" cursor="pointer" display="block" /></a>
										</div>
                                    </div>
                               </div> 
                            </div>
                        ))
                    }
				</div>
			</div>
			
			<Footer />
		</section>
	</header>
	<main>

	</main>
</Header>


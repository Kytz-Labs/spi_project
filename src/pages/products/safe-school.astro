        form_close = document.querySelector(".kytz_form_close"),
        myform = document.querySelector("#enquire_main_form");
    var emailerr = document.querySelector("#email_err"),
        usererror = document.querySelector("#username_err"),
        mobilerror = document.querySelector("#mobile_err"),
        messageerror = document.querySelector("#message_err");
    function enquire_form() {
        var e = document.getElementById("Kname"),
            r = document.getElementById("Kemail"),
            n = document.getElementById("Knumber"),
            t = document.getElementById("Kmessage"),
            i = document.getElementById("submitbtn"),
            l = document.getElementById("message");
        function o() {
            var r = document.querySelector("#username_err"),
                n = e.value,
                t = /^[a-zA-Z\s]+$/.test(n);
            return e.value ? (e.value.length < 4 ? ((r.innerHTML = "username length is too short"), !1) : t ? ((r.innerHTML = ""), !0) : ((r.innerHTML = "username should be a-z ,A-Z only"), !1)) : ((r.innerHTML = "field required"), !1);
        }
        function s() {
            var e = document.querySelector("#email_err"),
                n = r.value,
                t = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/.test(n);
            return "" == n ? ((e.innerHTML = "required field"), !1) : t ? ((e.innerHTML = ""), !0) : ((e.innerHTML = "invalid email"), !1);
        }
        function a() {
            var e,
                r = document.querySelector("#mobile_err");
            return n.value ? (!isNaN(parseFloat((e = n.value))) && isFinite(e) ? ((r.innerHTML = ""), !0) : ((r.innerHTML = "only number is allowed"), !1)) : ((r.innerHTML = "field required"), !1);
        }
        function m() {
            var e = document.querySelector("#message_err");
            return t.value ? ((e.innerHTML = ""), !0) : ((e.innerHTML = "field required"), !1);
        }
        e.addEventListener("input", () => {
            o();
        }),
            r.addEventListener("input", () => {
                s();
            }),
            n.addEventListener("input", () => {
                a();
            }),
            t.addEventListener("input", () => {
                m();
            }),
            (i.onclick = (e) => {
                if ((e.preventDefault(), o() || s() || a() || m())) {
                    if (o() && s() && a() && m()) {
                        l.innerHTML = "";
                        let r = document.querySelector(".enquire_contact_form"),
                            n = document.getElementById("enquire_form"),
                            t = document.getElementById("w3form"),
                            u = document.querySelector(".enquire_thnkmss");
                        i.innerHTML = "<div class='animate-pulse'>processing...</div>";
                        let c = new FormData(t),
                            d = {};
                        c.forEach((e, r) => {
                            d[r] ? (Array.isArray(d[r]) ? d[r].push(e) : (d[r] = [d[r], e])) : (d[r] = e);
                        });
                        let y = JSON.stringify(d);
                        console.log(y),
                            fetch("https://api.web3forms.com/submit", { method: "POST", headers: { "Content-Type": "application/json", Accept: "application/json" }, body: y })

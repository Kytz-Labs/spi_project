                                    200 == e.status ? ((i.innerHTML = "submit"), (r.style.display = "none"), (u.style.display = "block")) : (console.log(e), (i.innerHTML = n.message));
                                })
                                .catch((e) => {
                                    console.log(e), (i.innerHTML = "Something went wrong!");
                                })
                                .then(function () {
                                    t.reset(),
                                        setTimeout(() => {
                                            (u.style.display = "none"), (r.style.display = "block"), (n.style.display = "none");
                                        }, 5e3);
                                });
                    } else l.innerHTML = '<div class="alert alert-warning">Please fill all required field</div>';
                } else l.innerHTML = '<div class="alert alert-warning">Please fill all required field</div>';
            });
    }

const services_data = [
	{ title: "Application<br> Management", description: "SPI provides outsourced solutions to optimize performance of critical applications.<br><br> SPI offers trained, certified, experienced consultants to manage the entire application life cycle.", url: "/services/services_image1.webp"},
	{ title: "IT<br> Staffing", description: "SPI provides outsourced solutions to optimize performance of critical applications.<br><br> SPI offers trained, certified, experienced consultants to manage the entire application life cycle.", url: "/services/services_image3.webp"},
	{ title: "Digital<br> Transformation", description: "SPI provides outsourced solutions to optimize performance of critical applications.<br><br>SPI offers trained, certified, experienced consultants to manage the entire application life cycle.", url: "/services/services_image5.webp"},
]

const social_feeds = [
	{ title: "Software Professionals1, Inc.", url: "/social/social_feed1.webp"},
	{ title: "Software Professionals2, Inc2.", url: "/social/social_feed2.webp"},
	{ title: "Software Professionals3, Inc3.", url: "/social/social_feed3.webp"},
